{
	"manifest_version": 3,
	"name": "Breader",
	"version": "1.0",
	"description": "Save your bookmarks for reading later",
	"homepage_url": "https://breader.app",
	"icons": {
		"16": "icon.png",
		"48": "icons/icon-48.png",
		"128": "icons/icon-128.png"
	},
	"background": {
		"service_worker": "background.js",
		"scripts": ["background.js"]
	},
	"options_page": "privacy.html",
	"commands": {
		"save-bookmark": {
			"suggested_key": {
				"default": "Ctrl+Period",
				"mac": "Command+Period"
			},
			"description": "Save bookmark"
		}
	},
	"permissions": ["activeTab", "contextMenus"],
	"host_permissions": ["http://localhost:3000/*", "https://breader.app/*"],
	"browser_specific_settings": {
		"gecko": {
			"data_collection_permissions": {
				"required": ["none"],
				"optional": []
			}
		}
	}
}
